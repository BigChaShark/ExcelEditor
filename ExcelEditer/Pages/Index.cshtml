@page
@model IndexModel
@{
    ViewData["Title"] = "Upload File";
}

<h2>จองล็อค</h2>

<form method="post" enctype="multipart/form-data">
    <input type="file" asp-for="UploadedFile" id="main-file" />
    <button type="submit" asp-page-handler="ProcessExcel">Upload & Process</button>
</form>

@* <form method="post"> *@
